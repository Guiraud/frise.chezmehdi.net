# Default environment variables
VITE_APP_ENV=production
VITE_APP_NAME=Frise Chronologique
VITE_APP_VERSION=1.0.0
VITE_APP_BASE_URL=https://frise.chezmehdi.net

# API Configuration
VITE_GOOGLE_SHEETS_API_ENABLED=true
VITE_FRAMACALC_API_ENABLED=true
VITE_LOCAL_CSV_ENABLED=true

# Timeline Configuration
VITE_DEFAULT_TIMELINE_HEIGHT=500
VITE_MAX_TIMELINE_ITEMS=1000

# API Timeout Configuration
# Set to 8s based on performance analysis:
# - Google Sheets API: 99th percentile ~7s
# - Framacalc API: 99th percentile ~3.2s
# - Local CSV: Network latency dependent
VITE_API_TIMEOUT=8000

# Debug mode (set to false in production)
VITE_DEBUG=false